<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tadcka_sitemap.controller.node_content.class">Tadcka\Bundle\SitemapBundle\Controller\NodeContentController</parameter>
        <parameter key="tadcka_sitemap.controller.node_online.class">Tadcka\Bundle\SitemapBundle\Controller\NodeOnlineController</parameter>
        <parameter key="tadcka_sitemap.controller.node_seo.class">Tadcka\Bundle\SitemapBundle\Controller\NodeSeoController</parameter>
        <parameter key="tadcka_sitemap.controller.preview.class">Tadcka\Bundle\SitemapBundle\Controller\PreviewController</parameter>
        <parameter key="tadcka_sitemap.controller.sitemap.class">Tadcka\Bundle\SitemapBundle\Controller\SitemapController</parameter>
        <parameter key="tadcka_sitemap.controller.tree.class">Tadcka\Bundle\SitemapBundle\Controller\TreeController</parameter>
    </parameters>

    <services>

        <!--Sitemap node content controller-->
        <service id="tadcka_sitemap.controller.node_content" class="%tadcka_sitemap.controller.node_content.class%">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="tadcka_sitemap.templating" />
            <argument type="service" id="tadcka_sitemap.factory.node_event" />
            <argument type="service" id="tadcka_sitemap.helper.response" />
        </service>

        <!--Sitemap node online controller-->
        <service id="tadcka_sitemap.controller.node_online" class="%tadcka_sitemap.controller.node_online.class%">
            <argument type="service" id="tadcka_sitemap.templating" />
            <argument type="service" id="tadcka_sitemap.manager.node" />
            <argument type="service" id="tadcka_sitemap.handler.node_online" />
            <argument type="service" id="tadcka_sitemap.helper.response" />
        </service>

        <!--Sitemap node seo controller-->
        <service id="tadcka_sitemap.controller.node_seo" class="%tadcka_sitemap.controller.node_seo.class%">
            <argument type="service" id="tadcka_sitemap.templating" />
            <argument type="service" id="tadcka_sitemap.helper.response" />
            <argument type="service" id="tadcka_sitemap.form_factory.seo" />
            <argument type="service" id="tadcka_sitemap.form_handler.seo" />
        </service>

        <!--Sitemap preview controller-->
        <service id="tadcka_sitemap.controller.preview" class="%tadcka_sitemap.controller.preview.class%">
            <argument type="service" id="http_kernel" />
            <argument type="service" id="tadcka_routing.manager.route" />
        </service>

        <!--Sitemap controller-->
        <service id="tadcka_sitemap.controller.sitemap" class="%tadcka_sitemap.controller.sitemap.class%">
            <argument type="service" id="templating" />
            <argument type="service" id="translator" />
        </service>

        <!--Sitemap tree controller-->
        <service id="tadcka_sitemap.controller.tree" class="%tadcka_sitemap.controller.tree.class%">
            <argument type="service" id="tadcka_sitemap.helper.frontend" />
            <argument type="service" id="tadcka_sitemap.helper.response" />
        </service>

    </services>
</container>
