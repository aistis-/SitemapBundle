<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Tadcka\Bundle\SitemapBundle\Model\NodeTranslation">

        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="lang" column="lang" type="string" length="31" nullable="false" />

        <field name="metaTitle" column="meta_title" type="string" length="255" nullable="false" />

        <field name="metaDescription" column="meta_description" type="text" nullable="true" />

        <field name="metaKeywords" column="meta_keywords" type="text" nullable="true" />

    </mapped-superclass>

</doctrine-mapping>