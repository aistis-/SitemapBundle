<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tadcka_sitemap.templating.class">Tadcka\Bundle\SitemapBundle\Templating\SitemapEngine</parameter>
    </parameters>

    <services>

        <!--Sitemap templating node engine-->
        <service id="tadcka_sitemap.templating" class="%tadcka_sitemap.templating.class%">
            <argument type="service" id="tadcka_sitemap.routing.helper" />
            <argument type="service" id="templating" />
        </service>

    </services>
</container>
