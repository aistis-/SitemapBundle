<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tadcka_sitemap.helper.frontend.class">Tadcka\Bundle\SitemapBundle\Frontend\FrontendHelper</parameter>
    </parameters>

    <services>

        <!--Sitemap frontend helper-->
        <service id="tadcka_sitemap.helper.frontend" class="%tadcka_sitemap.helper.frontend.class%">
            <argument type="service" id="tadcka_sitemap.node.provider" />
            <argument type="service" id="tadcka_sitemap.manager.node_translation" />
            <argument type="service" id="tadcka_sitemap.provider" />
            <argument type="service" id="translator" />
            <argument type="service" id="tadcka_sitemap.tree.provider" />
        </service>

    </services>
</container>
